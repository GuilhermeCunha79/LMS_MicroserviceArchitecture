        <JSR223Assertion guiclass="TestBeanGUI" testclass="JSR223Assertion" testname="JSR223 Assertion">
          <stringProp name="cacheKey">true</stringProp>
          <stringProp name="filename"></stringProp>
          <stringProp name="parameters"></stringProp>
          <stringProp name="script">// Valor de throughput desejado (exemplo: 20 amostras por segundo)
def targetThroughput = 20

// Obter o número de requisições realizadas até o momento (acumulado no contexto global)
def requestCount = ctx.getVariables().get(&quot;requestCount&quot;) ?: 0
requestCount = requestCount.toInteger()

// Obter o tempo total até o momento (em milissegundos)
def totalTime = ctx.getVariables().get(&quot;totalTime&quot;) ?: 0
totalTime = totalTime.toInteger()

// Atualizar os valores para o próximo ciclo
totalTime += prev.getTime()  // Tempo de resposta da requisição atual
requestCount += 1           // Contabilizar a requisição atual

// Salvar os valores atualizados no contexto global
ctx.getVariables().put(&quot;requestCount&quot;, requestCount.toString())
ctx.getVariables().put(&quot;totalTime&quot;, totalTime.toString())

// Calcular o throughput acumulado (amostras por segundo)
def currentThroughput = requestCount / (totalTime / 1000)  // throughput em amostras por segundo

// Exibir o throughput no console
log.info(&quot;Current Throughput: &quot; + currentThroughput)

// Verificar se o throughput atual é maior ou igual ao desejado
if (currentThroughput &gt;= targetThroughput) {
    // Atingiu o throughput desejado, retorna 1
    return 1
} else {
    // Não atingiu o throughput, retorna 0
    return 0
}
</stringProp>
          <stringProp name="scriptLanguage">groovy</stringProp>
